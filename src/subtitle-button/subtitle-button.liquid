{% if hasSubtitles and enableSubtitles %}
<div class="tray-button button subtitle-button" aria-controls="subtitleOptions" aria-label="Closed captioning" label="Closed captioning" role="button" tabindex="1600">
  <!--Subs-->

  <ul id="subtitleOptions">
    {% for l in localesArray %} 
    <li {% if l.locale == subtitleLocale %}class="selected"{% endif %} click="$set:subtitleLocale:{{l.locale}}" aria-label="Closed captions in {{l.language}}" label="Closed captions in {{l.language}}" role="button" tabindex="1601">
      {{l.language}}
    </li>
    {% endfor %}
    <li {% if subtitleLocale == empty %}class="selected"{% endif %} click="$set:subtitleLocale:" aria-label="Disable closed captioning" label="Disable closed captioning" role="button" tabindex="1602">
      None
    </li>
  </ul>
</div>
{% endif %}
