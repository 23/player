{% player status-display %}
{% player core %}
{% player analytics %}
{% player playflow %}

<div id="player">
  <!-- Video display -->
  {% player video-display with "displayDevice":"html5" %}

  {% player info %}

  {% player browse %}

  {% player subtitles %}

  <!-- Control bar or tray -->
  <div id="tray">
  
    {% player sharing %}

    <div class="tray-navigation">
      <ul class="tray-left">
        {% player play-button %}
      </ul>

      <div class="tray-right">
        {% player share-button %}
        {% player fullscreen-button %}
        {% player volume-button %}
        {% player subtitle-button %}
        {% player quality-button %}
        {% player info-button %}
        {% player browse-button %}
      </div>

      <div class="tray-scrubber">
        <div class="tray-scrubber-sub">
          {% player scrubber %}
          {% player sections %}
        </div>
      </div>
    </div>

  </div>

  {% player logo %}
</div>



