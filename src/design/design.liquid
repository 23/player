{% player status-display %}
{% player core %}
{% player analytics %}
{% player playflow %}

<div id="player">
  <!-- Video display -->
  {% player video-display with "displayDevice":"html5" %}


  {% player subtitles %}

  <!-- Control bar or tray -->
  <div id="tray">
    {% player info %}

    <table class="tray-navigation"><tr>
      <td class="tray-left tray-button">{% player play-button %}</td>
    
      <td class="tray-scrubber">
        <div class="tray-scrubber-sub">
          {% player scrubber %}
          {% player sections %}
        </div>
      </td>

      <td class="tray-right tray-button">{% player browse-button %}</td>
      <td class="tray-right tray-button">{% player share-button %}</td>
      <td class="tray-right tray-button">{% player quality-button %}</td>
      <td class="tray-right tray-button">{% player subtitle-button %}</td>
      <td class="tray-right tray-button">{% player volume-button %}</td>
      <td class="tray-right tray-button">{% player fullscreen-button %}</td>
    </tr></table>
    {% player sharing %}
    {% player browse %}
  </div>

  <div class="big-button tray-button">{% player big-play-button %}</div>
  {% player logo %}
</div>



