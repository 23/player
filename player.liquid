{% glue core with "domain":"reinvent.23video.com", "player_id":6458116 %}

<div id="player">
  <!-- Video display -->
  {% glue video-display %}

  <!-- Control bar or tray -->
  <div id="tray">
    <div class="tray-left">
      <div class="tray-button">{% glue play-button %}</div>
    </div>
    
    {% glue scrubber %}

    <div class="tray-right">
      {% if 0 %}
      <div class="tray-button">{% glue playlist-button %}</div>
      <div class="tray-button">{% glue share-button %}</div>
      <div class="tray-button">{% glue fullscreen-button %}</div>
      <div class="tray-button">{% glue volume-button "volume":.5 %}</div>
      <div class="tray-button">{% glue volume-button %}</div>
      <div class="tray-button">{% glue quality-button with "quality":"hd" %}</div>
      {% endif %}
    </div>
  </div>

  {% glue logo %}
</div>

{% glue analytics %}
