{% if showLogo == true and logoSource != empty %}
  <div class="logo" value="stuff" style="
      {% case logoPosition %} 
        {% when 'top left' %} 
          top:20px; 
          left:20px;
        {% when 'bottom left' %} 
          bottom:20px; 
          left:20px;
        {% when 'bottom right'  %} 
          bottom:20px; 
          right:20px;
        {% when 'top right'  %} 
          top:20px; 
          right:20px;
      {% endcase %}
    ">
    <a href="{{siteLink}}">
      <img 
          src="{{logoSource}}"
          style="
                 max-width:{{logoWidth}}px;
                 max-height:{{logoHeight}}px;
                 opacity:{{logoAlpha}}
                 "
          />
    </a>
  </div>
{% endif %}
